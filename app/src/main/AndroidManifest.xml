<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bit01.alok.nfcpayment" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GenerateBillActivity"
            android:label="@string/title_activity_generate_bill"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".RecievePayment"
            android:label="@string/title_activity_recieve_payment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".History"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CustomerActivity"
            android:label="@string/title_activity_customer"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ViewBill"
            android:label="@string/title_activity_view_bill"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
